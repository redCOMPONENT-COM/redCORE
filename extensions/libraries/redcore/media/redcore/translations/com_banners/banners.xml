  <version>1.8.3</version>
  <description>Translation definition for Joomla Banner component</description>
  <reference>
    <table name="banners">
      <field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
      <field name="name" type="titletext" translate="1" alwaysFallback="false" filter="RAW" description="">Banner Name</field>
      <field name="clickurl" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Click URL</field>
      <field name="custombannercode" type="textarea" translate="1" alwaysFallback="false" filter="RAW" description="">Custom banner code</field>
      <field name="state" type="state" translate="1" alwaysFallback="true" filter="RAW" description="">State</field>
      <filter><![CDATA[]]></filter>
    </table>
    <component>
      <editForm admin="true" option="com_banners" view="banner" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first" checkoriginalid="false"/>
    </component>
  </reference>
</contentelement>
