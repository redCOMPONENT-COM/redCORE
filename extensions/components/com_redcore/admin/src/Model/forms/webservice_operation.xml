<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="operation">
        <fieldset addfieldpath="/libraries/redcore/form/fields">
            <field
                    name="isEnabled"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_IS_ENABLED_LABEL"
                    description="COM_REDCORE_WEBSERVICE_IS_ENABLED_DESCRIPTION"
                    class="btn-group ws-isEnabled-trigger"
                    default="0"
                    >
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                    name="useOperation"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_USE_OPERATION_LABEL"
                    description="COM_REDCORE_WEBSERVICE_USE_OPERATION_DESCRIPTION"
                    class="btn-group ws-use-forward-switch"
                    default=""
                    >
                <option value="">JNONE</option>
                <option value="create">COM_REDCORE_WEBSERVICE_CREATE_LABEL</option>
                <option value="read">COM_REDCORE_WEBSERVICE_READ_LABEL</option>
                <option value="update">COM_REDCORE_WEBSERVICE_UPDATE_LABEL</option>
                <option value="delete">COM_REDCORE_WEBSERVICE_DELETE_LABEL</option>
                <option value="documentation">COM_REDCORE_WEBSERVICE_DOCUMENTATION_LABEL</option>
            </field>
            <field
                    name="authorizationNeeded"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_AUTHORIZATION_NEEDED_LABEL"
                    description="COM_REDCORE_WEBSERVICE_AUTHORIZATION_NEEDED_DESCRIPTION"
                    class="btn-group"
                    default="true"
                    >
                <option value="true">JYES</option>
                <option value="false">JNO</option>
            </field>
            <field
                    name="strictFields"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_STRICT_FIELDS_LABEL"
                    description="COM_REDCORE_WEBSERVICE_STRICT_FIELDS_DESCRIPTION"
                    class="btn-group"
                    default="false"
                    >
                <option value="true">JYES</option>
                <option value="false">JNO</option>
            </field>
            <field
                    name="authorization"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_AUTHORIZATION_LABEL"
                    description="COM_REDCORE_WEBSERVICE_AUTHORIZATION_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="dataMode"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_DATA_MODE_LABEL"
                    description="COM_REDCORE_WEBSERVICE_DATA_MODE_DESCRIPTION"
                    class="btn-group ws-data-mode-switch"
                    default="model"
                    >
                <option value="model">COM_REDCORE_WEBSERVICE_DATA_MODE_MODEL_LABEL</option>
                <option value="table">COM_REDCORE_WEBSERVICE_DATA_MODE_TABLE_LABEL</option>
                <option value="helper">COM_REDCORE_WEBSERVICE_DATA_MODE_HELPER_LABEL</option>
            </field>
            <field
                    name="optionName"
                    type="componentlist"
                    labelclass="col-sm-2 control-label"
                    label="COM_REDCORE_WEBSERVICE_OPTION_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_OPTION_NAME_DESCRIPTION"
                    default=""
                    class="">
                <option value="">COM_REDCORE_TRANSLATIONS_SELECT_COMPONENT</option>
            </field>
            <field
                    name="modelClassName"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_MODEL_CLASS_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_MODEL_CLASS_NAME_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="modelClassPath"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_MODEL_CLASS_PATH_LABEL"
                    description="COM_REDCORE_WEBSERVICE_MODEL_CLASS_PATH_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="isAdminClass"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_IS_ADMIN_LABEL"
                    description="COM_REDCORE_WEBSERVICE_IS_ADMIN_DESCRIPTION"
                    class="btn-group"
                    default="false"
                    >
                <option value="true">JYES</option>
                <option value="false">JNO</option>
            </field>
            <field
                    name="functionName"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_FUNCTION_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_FUNCTION_NAME_DESCRIPTION"
                    class="form-control"
                    default=""
                    />
            <field
                    name="paginationFunction"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_PAGINATION_FUNCTION_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_PAGINATION_FUNCTION_NAME_DESCRIPTION"
                    class="form-control"
                    default="getPagination"
            />
            <field
                    name="totalFunction"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_TOTAL_FUNCTION_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_TOTAL_FUNCTION_NAME_DESCRIPTION"
                    class="form-control"
                    default="getTotal"
            />
            <field
                    name="functionArgs"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_FUNCTION_ARGUMENTS_LABEL"
                    description="COM_REDCORE_WEBSERVICE_FUNCTION_ARGUMENTS_DESCRIPTION"
                    class="form-control"
                    default=""
                    />
            <field
                    name="validateData"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_VALIDATE_DATA_LABEL"
                    description="COM_REDCORE_WEBSERVICE_VALIDATE_DATA_DESCRIPTION"
                    class="btn-group ws-validate-data-switch"
                    default="none"
                    >
                <option value="none">COM_REDCORE_WEBSERVICE_VALIDATE_DATA_NONE_LABEL</option>
                <option value="form">COM_REDCORE_WEBSERVICE_VALIDATE_DATA_FORM_LABEL</option>
                <option value="function">COM_REDCORE_WEBSERVICE_VALIDATE_DATA_FUNCTION_LABEL</option>
            </field>
            <field
                    name="validateDataFunction"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_VALIDATE_DATA_FUNCTION_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_VALIDATE_DATA_FUNCTION_NAME_DESCRIPTION"
                    class="form-control"
                    default="validate"
                    />
            <field
                    name="tableName"
                    type="tablelist"
                    labelclass="col-sm-2 control-label"
                    label="COM_REDCORE_WEBSERVICE_TABLE_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_TABLE_NAME_DESCRIPTION"
                    default=""
                    class="">
                <option value="">COM_REDCORE_WEBSERVICE_SELECT_TABLE</option>
            </field>
            <field
                    name="description"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_DESCRIPTION_LABEL"
                    description="COM_REDCORE_WEBSERVICE_DESCRIPTION_OPERATION_DESCRIPTION"
                    class="form-control"
                    />

            <fields name="resources">
                <field
                        name="resource"
                        multiple="true"
                        type="checkbox"
                        />
                <field
                        name="description"
                        labelclass="col-sm-2 control-label"
                        type="text"
                        label="COM_REDCORE_WEBSERVICE_DESCRIPTION_LABEL"
                        description="COM_REDCORE_WEBSERVICE_DESCRIPTION_RESOURCES_DESCRIPTION"
                        class="form-control"
                        />
            </fields>

            <fields name="fields">
                <field
                        name="field"
                        multiple="true"
                        type="checkbox"
                        />
                <field
                        name="description"
                        labelclass="col-sm-2 control-label"
                        type="text"
                        label="COM_REDCORE_WEBSERVICE_DESCRIPTION_LABEL"
                        description="COM_REDCORE_WEBSERVICE_DESCRIPTION_FIELDS_DESCRIPTION"
                        class="form-control"
                        />
            </fields>
        </fieldset>
    </fields>
</form>
