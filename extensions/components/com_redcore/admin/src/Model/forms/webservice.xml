<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="main">
        <fieldset addfieldpath="/libraries/redcore/form/fields">
            <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDCORE_ID_LABEL"
                description="COM_REDCORE_ID_DESC"
                readonly="true"
                />
            <field
                    name="client"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_CLIENT_LABEL"
                    description="COM_REDCORE_WEBSERVICE_CLIENT_DESCRIPTION"
                    required="true"
                    class="btn-group"
                    default="site"
                    >
                <option value="site">JSITE</option>
                <option value="administrator">JADMINISTRATOR</option>
            </field>
            <field
                    name="name"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_NAME_DESCRIPTION"
                    required="true"
                    class="form-control"
                    />
            <field
                    name="version"
                    labelclass="col-sm-2 control-label"
                    default="1.0.0"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_VERSION_LABEL"
                    description="COM_REDCORE_WEBSERVICE_VERSION_DESCRIPTION"
                    required="true"
                    class="form-control"
                    />
            <field
                    name="path"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_PATH_LABEL"
                    description="COM_REDCORE_WEBSERVICE_PATH_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="xmlFile"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_FILE_LABEL"
                    description="COM_REDCORE_WEBSERVICE_FILE_DESCRIPTION"
                    class="form-control"
                    readonly="true"
                    />
            <field
                    name="title"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_TITLE_LABEL"
                    description="COM_REDCORE_WEBSERVICE_TITLE_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="author"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_AUTHOR_LABEL"
                    description="COM_REDCORE_WEBSERVICE_AUTHOR_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="copyright"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_COPYRIGHT_LABEL"
                    description="COM_REDCORE_WEBSERVICE_COPYRIGHT_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="authorizationAssetName"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_AUTHORIZATION_ASSET_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_AUTHORIZATION_ASSET_NAME_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="state"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_STATE_LABEL"
                    description="COM_REDCORE_WEBSERVICE_STATE_DESCRIPTION"
                    required="true"
                    class="btn-group"
                    default="1"
                    >
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
            </field>
            <field
                    name="description"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_DESCRIPTION_LABEL"
                    description="COM_REDCORE_WEBSERVICE_DESCRIPTION_DESCRIPTION"
                    class="form-control"
                    />
            <fields name="resources">
                <field
                        name="resource"
                        multiple="true"
                        type="checkbox"
                        />
            </fields>
            <field
                    name="addFromDatabase"
                    type="tablelist"
                    label="COM_REDCORE_WEBSERVICE_TABLE_NAME_LABEL"
                    description="COM_REDCORE_WEBSERVICE_TABLE_NAME_DESCRIPTION"
                    default=""
                    class="">
                <option value="">COM_REDCORE_WEBSERVICE_SELECT_TABLE</option>
            </field>
            <field
                    name="connectWebservice"
                    type="webservicelist"
                    label="COM_REDCORE_WEBSERVICES"
                    description="COM_REDCORE_WEBSERVICE_LIST_DESCRIPTION"
                    default=""
                    class="">
                <option value="">COM_REDCORE_WEBSERVICE_SELECT_WEBSERVICE</option>
            </field>
        </fieldset>

    </fields>
    <fields name="documentation">
        <fieldset addfieldpath="/libraries/redcore/form/fields">
            <field
                    name="isEnabled"
                    type="hidden"
                    label="COM_REDCORE_WEBSERVICE_IS_ENABLED_LABEL"
                    description="COM_REDCORE_WEBSERVICE_IS_ENABLED_DESCRIPTION"
                    default="1"
                    readonly="true"
                    />
            <field
                    name="authorizationNeeded"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_AUTHORIZATION_NEEDED_LABEL"
                    description="COM_REDCORE_WEBSERVICE_AUTHORIZATION_NEEDED_DESCRIPTION"
                    class="btn-group"
                    default="false"
                    >
                <option value="true">JYES</option>
                <option value="false">JNO</option>
            </field>
            <field
                    name="source"
                    labelclass="col-sm-2 control-label"
                    type="radio"
                    label="COM_REDCORE_WEBSERVICE_SOURCE_LABEL"
                    description="COM_REDCORE_WEBSERVICE_SOURCE_DESCRIPTION"
                    class="btn-group ws-documentationSource-switch"
                    default="auto"
                    >
                <option value="auto">COM_REDCORE_WEBSERVICE_SOURCE_AUTO_LABEL</option>
                <option value="url">COM_REDCORE_WEBSERVICE_SOURCE_URL_LABEL</option>
                <option value="none">COM_REDCORE_WEBSERVICE_SOURCE_NONE_LABEL</option>
            </field>
            <field
                    name="url"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_SOURCE_URL_LABEL"
                    description="COM_REDCORE_WEBSERVICE_SOURCE_URL_DESCRIPTION"
                    class="form-control"
                    />
            <field
                    name="description"
                    labelclass="col-sm-2 control-label"
                    type="text"
                    label="COM_REDCORE_WEBSERVICE_DESCRIPTION_LABEL"
                    description="COM_REDCORE_WEBSERVICE_DESCRIPTION_DOCUMENTATION_DESCRIPTION"
                    class="form-control"
                    />
        </fieldset>
    </fields>

</form>
